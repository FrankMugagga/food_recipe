<fieldset>
  <legend> <h2>Forgot your password?</h2> </legend>
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
  
    <div class="field">
      <%= f.label :email, hidden: true %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'email', class: 'input' %>
    </div>
  
    <br />
    <div class="actions">
      <%= f.submit "Send me reset password instructions", class: 'submit' %>
    </div>
  <% end %>
  <br />
  <%= render "devise/shared/links" %>
  
</fieldset>
