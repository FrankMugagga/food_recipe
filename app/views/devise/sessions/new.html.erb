<fieldset>
  <legend> <h2>Log in</h2> </legend>  

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :email, hidden: true %><br />
      <%= f.email_field :email, class: 'input', placeholder: 'email' , autofocus: true, autocomplete: "email" %>
    </div>
    <br />

    <div class="field">
      <%= f.label :password, hidden: true %><br />
      <%= f.password_field :password, class: 'input', placeholder: 'password', autocomplete: "current-password" %>
    </div>
    <br />

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>
    <br />

    <div class="actions">
      <%= f.submit "Log in", class: 'submit' %>
    </div>
  <% end %>
  <br />

  <%= render "devise/shared/links" %>

</fieldset>