<h1>Add food to inventory</h1>

<%= form_with(model: @inventory_food, url: inventory_inventory_foods_path(@inventory), local: true) do |form| %>


  <%= form.hidden_field :inventory_id, value: @inventory.id %>
  <%= form.label :food_id, 'Select food' %>
  <%= form.collection_select :food_id, Food.all, :id, :name, include_blank: true %>

  <%= form.label :quantity %>
  <%= form.text_field :quantity %>

  <%= form.submit 'Create' %>
<% end %>

