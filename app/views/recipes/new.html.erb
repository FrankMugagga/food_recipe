<fieldset>

  <legend> <h1>Create Recipe</h1> </legend>

  <br /><br />
  <%= form_with(model: @recipe, url: recipes_path(current_user), method: :post) do |form| %>
    <%= form.label :name, hidden:true %>
    <%= form.text_field :name, class: 'input', placeholder: 'Name', required: true %><br>

    <br />
    <%= form.label :preparation_time, hidden:true %>
    <%= form.number_field :preparation_time, class: 'input', placeholder: 'Preparation Time', required: true %> <br>

    <br />
    <%= form.label :cooking_time, hidden:true %>
    <%= form.number_field :cooking_time, class: 'input', placeholder: 'Cooking Time', required: true %> <br>

    <br />
    <%= form.label :description, hidden: true %>
    <%= form.text_area :description, placeholder: 'Description', required: true,cols: 45, rows: 10  %><br>

    <br />
    <%= form.label :public %>
    <%= form.check_box :public %> <br>
  
    <br />
    <br />
    <div class="actions">
      <%= form.submit 'Create recipe', class: 'submit' %> 
    </div> 

  <% end %>

  <%= link_to 'Back', recipes_path %>
</fieldset>