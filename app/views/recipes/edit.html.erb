<h1>Edit Recipe</h1>
<%= form_with(model: @recipe, url: recipe_path(@recipe), method: :put) do |form| %>
  <%= form.label :name %>
  <%= form.text_field :name, placeholder: @recipe.name %><br>

  <%= form.label :preparation_time %>
  <%= form.number_field :preparation_time, placeholder: @recipe.preparation_time %> <br>

  <%= form.label :cooking_time %>
  <%= form.number_field :cooking_time, placeholder: @recipe.cooking_time %> <br>

  <%= form.label :description %>
  <%= form.text_area :description, placeholder: @recipe.description %><br>

  <%= form.label :public %>
  <%= form.check_box :public %> <br>
  
  <%= form.submit 'Edit recipe' %>  
<% end %>

<%= link_to 'Back', recipes_path %>

