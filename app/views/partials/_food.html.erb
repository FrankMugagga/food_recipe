<ul class='food'>
  <li class='food_list1'> <%= food.name %> </li>
  <li class='food_list1'> <%= food.measurement_unit %> </li>
  <li class='food_list1'> <%= food.price %> </li>
  <li>
    <div class='food_action'>
      <% if can? :manage, food %>
        <%= link_to 'Delete', food, data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' } %>
      <% end %>
    </div>
  </li>
</ul>