<section>
  <% if user_signed_in? %>
    <% current_time = Time.now %>
    <br />
    <% if current_time.hour >= 0 && current_time.hour < 12 %>
      <h1 class='head'>Good morning  <em> <u> <%= current_user.name %>  </u> </em>, you are welcome!  </h1>
    <% elsif current_time.hour >= 12 && current_time.hour < 18 %>
      <h1 class='head'>Good afternoon  <em> <u> <%= current_user.name %>  </u> </em>, you are welcome!  </h1>
    <% else %>
      <h1 class='head'> Good evening  <em> <u> <%= current_user.name %>  </u> </em>, you are welcome!  </h1>
    <% end %>

    <br />
    <%= render partial: 'partials/menu' %>
    <br />
    <h2 id='chef'>Chefs</h2>
    <hr />
    <% @users.each do |user| %>
      <ul class='users'>
        <li> <%= render partial: 'partials/user', locals: { user:user } %> </li>
      </ul>   
    <% end %>
  <% end %>
</section>