<h1>Create Inventory</h1>

<%= form_with(model: @inventory, url: inventories_path(current_user), method: :post) do |form| %>
    <%= form.label :name %>
    <%= form.text_field :name %>

    <%= form.label :description %>
    <%= form.text_area :description %>
    <%= form.submit 'Create inventory' %>
<% end %>

<%= link_to 'Back', inventories_path %>
