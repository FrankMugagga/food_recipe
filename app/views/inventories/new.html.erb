<fieldset>
  <legend> <h1>Create Inventory</h1> </legend>

  <br />
  <br />
  <%= form_with(model: @inventory, url: inventories_path(current_user), method: :post) do |form| %>
    <%= form.label :name, hidden: true %>
    <%= form.text_field :name, class: 'input', placeholder: 'Name' %>

    <br />
    <br />
    <%= form.label :description, hidden: true %>
    <%= form.text_area :description, placeholder: 'Description',cols: 50, rows: 10 %>

    <br />
    <br />
    <div class="actions">
      <%= form.submit 'Create inventory', class: 'submit' %>
    </div>
  <% end %>

  <%= link_to 'Back', inventories_path %>

</fieldset>